
<% if !user_signed_in? %>
<div class="jumbotron">
      <div class="container">
        <h1>Welcome to Pinterest for Kittens</h1>
          <p>
    <a class="btn btn-primary btn-lg" role="button" href="/users/sign_in"> <span class="glyphicon glyphicon-log-in"></span> Sign in</a> 

    <a class="btn btn-danger btn-lg" role="button" href="/users/sign_up"> <span class="glyphicon glyphicon-new-window"></span> Sign up</a>
  </p>
      </div>
    </div>
 <% end %>
    <% if user_signed_in? %>
<h1>Your Pins</h1>
 
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>
<% end %>
